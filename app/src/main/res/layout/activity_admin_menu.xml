<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_granzonamarciana"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel Administrador"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión completa del sistema"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="40dp"/>

        <!-- Opciones administrador -->
        <Button
            android:id="@+id/btnManageUsers"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Gestionar Usuarios"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnManageNews"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Gestionar Noticias"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnManageEditions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Gestionar Ediciones"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnManageApplications"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Gestionar Solicitudes"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnManageGalas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Gestionar Galas"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCreateAdmin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Crear Administrador"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/text_secondary" />

        <!-- Opciones personales -->
        <Button
            android:id="@+id/btnMyProfile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="Mi Perfil"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cerrar Sesión"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="12dp"
            android:backgroundTint="@color/button_logout_bg"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>