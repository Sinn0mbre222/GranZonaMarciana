<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0E14"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvEditionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle de Edición"
        android:textColor="#00FF41"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tvEditionDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvEditionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFEB3B"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnJoinEdition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOLICITAR PARTICIPACIÓN"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF5722"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galas programadas:"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/lvGalas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>