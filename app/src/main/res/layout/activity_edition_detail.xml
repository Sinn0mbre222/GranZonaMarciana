<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvEditionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EdiciÃ³n Marciana 2026"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvEditionDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01 - 31/03"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participantes confirmados:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <ListView
        android:id="@+id/lvParticipants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Solicitar participar"
        android:backgroundTint="@color/button_menu_bg"
        android:textColor="@color/white" />

</LinearLayout>