<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@color/background_dark">

        <ImageView
            android:id="@+id/ivParticipantPublic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_default_avatar"
            android:background="@drawable/edittext_background"
            android:padding="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvPublicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nombre del Participante"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAvgScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media: 0.0"
                android:textColor="@color/white"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tvGalaCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galas: 0"
                android:textColor="@color/white"
                android:background="@drawable/edittext_background"
                android:padding="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRateNow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="Puntuar en Gala Actual"
            android:textAllCaps="false"
            android:backgroundTint="@color/button_menu_bg"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial de Puntuaciones"
        android:textColor="@color/text_secondary"
        android:paddingStart="24dp"
        android:paddingBottom="8dp"/>

    <ListView
        android:id="@+id/lvParticipantHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/white"
        android:dividerHeight="1dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/item_history"/>

</LinearLayout>